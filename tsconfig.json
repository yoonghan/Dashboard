{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "ES2015",
        "jsx": "preserve",
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "removeComments": false,
        "moduleResolution": "node",
        "lib" : [
          "es2017",
          "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
